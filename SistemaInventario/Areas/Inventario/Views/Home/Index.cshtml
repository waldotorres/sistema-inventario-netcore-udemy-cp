@model IEnumerable<SistemaInventario.Modelos.Producto>

<div class="row pb-3">
    @foreach ( var producto in Model ) {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card" style="border:0px">
                        <img src="@producto.ImagenUrl" class="card-img-top rounded"/>
                        <div class="pl-1">
                            <p class="card-title h5">
                                <b style="color:#2c3e50"> @producto.Descripcion </b>
                            </p>
                        </div>
                        <div class="style:padding-left: 5px;">
                            <p>Precio: <b>S/. @producto.Precio.ToString("0.00") </b> </p>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary form-control" asp-action="Detalle" asp-route-id="@producto.Id" >Detalle</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>